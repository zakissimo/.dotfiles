. ~/.cache/wal/colors.sh

### Software ###
#Browser
super + b
    brave

#Kitty
super + Return
    kitty

#File-Manager
super + e
	pcmanfm

#Dmenu
super + r
	dmenu_run -i -h 23 -nb $color0 -nf '#6E6C7E' -sb $color1 -sf '#FBF5F3' -fn 'CaskaydiaCove Nerd Font:bold:pixelsize=14'

#Logout
#super + shift + x
#	bspc quit

#kill
super + a
	bspc node -c

#Reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc

### WM ###
#Focus selected desktop
super + {6,7,8,9,0,y,u,i,o,p}
    bspc desktop -f '^{1-9,10}'

# {minus,egrave,exclam,ccedilla,agrave}
#
#Move window to selected desktop
super + shift + {6,7,8,9,0,y,u,i,o,p}
    id=$(bspc query -N -n); bspc node -d ^{1-9,10}; bspc node -f ${id}}

# Focus windows by direction
super + {h,j,k,l}
	bspc node --{focus} {west,south,north,east}

# Swap windows by direction
super + shift + {h,j,k,l}
	bspc node --{swap} {west,south,north,east}

#Resizing
super + control + {h,j,k,l}
    bspc window -e {left -10,down +10,up -10,right +10}

#Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# Increase/decrease window gap on focused desktop
super + alt + {j,k}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# set the window state
super + BackSpace
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Move focus to other monitor
super + space
		bspc monitor -f next

#Focus selected desktop
# super + Tab
# 	bspc desktop -f '^{1-9,10}'

# Flip layout vertically/horizontally
# super + {_,shift + }a
# 	bspc node @/ --flip {vertical,horizontal}

#Rotate desktop
# alt + space
# 	bspc node @/ --rotate {90,-90}

### Utility ###
#Screenshot
Print
	flameshot gui -c

#Raises volume
# XF86AudioRaiseVolume
#     amixer set Master 10%+

#Lowers volume
# XF86AudioLowerVolume
#     amixer set Master 10%-

#Mute
# XF86AudioMute
#     amixer -D pulse set Master 1+ toggle

#PLAY
# XF86AudioPlay
#     playerctl play-pause

#Next
# XF86AudioNext
#     playerctl next

#previous
# XF86AudioPrev
#     playerctl previous

#Stop
# XF86AudioStop
#     playerctl stop

#Brightness up
# XF86MonBrightnessUp
#     xbacklight -inc 10

#Brightness down
# XF86MonBrightnessDown
#     xbacklight -dec 10
