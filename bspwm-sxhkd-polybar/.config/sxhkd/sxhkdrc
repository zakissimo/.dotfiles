
### Software ###
#Browser
super + b
    brave

#Kitty
super + Return
    kitty

#File-Manager
super + e
	pcmanfm

#Dmenu
super + r
	dmenu_run -h 25 -nf '#6E6C7E' -sf '#FBF5F3' -fn 'CaskaydiaCove Nerd Font:bold:pixelsize=15'

#Logout
#super + shift + x
#	bspc quit

#kill
super + q
	bspc node -c

#Reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd
	notify-send "sxhkd: sxhkd has been restarted."

#Reload bspwm
super + shift + r
	~/.config/bspwm/bspwmrc
	notify-send "bspwm: bspwm has been restarted."

### WM ###
#Focus selected desktop
super + {y,u,i,o,p}
    bspc desktop -f '^{1-5}'

# {minus,egrave,exclam,ccedilla,agrave}

#Move window to selected desktop
super + shift + {y,u,i,o,p}
    id=$(bspc query -N -n); bspc node -d ^{1-5}; bspc node -f ${id}}

# Focus windows by direction
super + {h,j,k,l}
	bspc node --{focus} {west,south,north,east}

# Swap windows by direction
super + shift + {h,j,k,l}
	bspc node --{swap} {west,south,north,east}

# expand or shrink a window to the right
super + control + l 
	bspc node -z right 20 0 || bspc node -z left 20 0

# expand or shrink a window to the left
super + control + h 
	bspc node -z left -20 0 || bspc node -z right -20 0

# expand or shrink a window to the top
super + control + k 
	bspc node -z top 0 -20 || bspc node -z bottom 0 -20

# expand or shrink a window to the bottom
super + control + j 
	bspc node -z bottom 0 20 || bspc node -z top 0 20

# expand a window by moving one of its side outward
# super + control + {h,j,k,l}
# 	bspc node -z {left -20 0,bottom 0 -20,top 0 -20,right -20 0}

# contract a window by moving one of its side inward
# super + control + shift + {h,j,k,l}
# 	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

#Toggle fullscreen of window
super + f
	bspc node --state \~fullscreen

# Increase/decrease window gap on focused desktop
super + alt + {j,k}
	bspc config -d focused window_gap $((`bspc config -d focused window_gap` {-,+} 5 ))

# set the window state
super + BackSpace
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# Move focus to other monitor
super + space
		bspc monitor -f next

#Focus selected desktop
# super + Tab
# 	bspc desktop -f '^{1-9,10}'

# Flip layout vertically/horizontally
# super + {_,shift + }a
# 	bspc node @/ --flip {vertical,horizontal}

# Rotate the windows 90 degrees in any direction
#super + shift + {comma,period}
