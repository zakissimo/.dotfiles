### Software ###
#Browser
super + b
	brave

#Kitty
super + Return
	tabbed -r 2 st -w ''

#File-Manager
super + e
	pcmanfm

#Dmenu
super + r
	rofi -show drun

#Change display
super + ctrl + alt + d
	screen-select

#ock screen
super + ctrl + alt + l
    betterlockscreen -l dimblur

#Power menu
super + ctrl + alt + p
    power-menu

#Power profiles
XF86Launch4
    power-profiles

#Reload sxhkd:
super + ctrl + alt + r
	pkill -USR1 -x sxhkd && notify-send "sxhkd: Process has been restarted."

### Utility ###
#Screenshot
Print
	flameshot gui -c

#Screencast
super + Print
    peek

#Super Copy
super + c
    tmpclip -c

#Super Paste
super + v
    tmpclip -p

#Screen Brightness up
XF86MonBrightnessUp
    mon_light -u

#Screen Brightness down
XF86MonBrightnessDown
    mon_light -d

#Keyboard Brightness up
alt + F3
    kbd_light -u

#Keyboard Brightness down
alt + F2
    kbd_light -d

#PLAY
XF86AudioPlay
    playerctl play-pause

#Next
XF86AudioNext
    playerctl next

#previous
XF86AudioPrev
    playerctl previous

#Stop
XF86AudioStop
    playerctl stop

# Raises volume
XF86AudioRaiseVolume
   change-vol UP
    

# Lowers volume
XF86AudioLowerVolume
   change-vol DOWN

# Mute
XF86AudioMute
    change-vol MUTE

