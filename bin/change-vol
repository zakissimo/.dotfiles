#!/usr/bin/env bash

SOUND_DIR=$(nix path-info nixpkgs#sound-theme-freedesktop)
SOUND="$SOUND_DIR/share/sounds/freedesktop/stereo/audio-volume-change.oga"

ICON_DIR=$(nix path-info nixpkgs#rose-pine-icon-theme)
UP_ICON="$ICON_DIR/share/icons/rose-pine/16x16/panel/audio-volume-high.svg"
DOWN_ICON="$ICON_DIR/share/icons/rose-pine/16x16/panel/audio-volume-medium.svg"
MUTED_ICON="$ICON_DIR/share/icons/rose-pine/16x16/panel/audio-volume-muted.svg"

function send_notification() {
    volume=$(pamixer --get-volume)
    icon="$1_ICON"
    [[ $1 = "UP" ]] && icon=$UP_ICON || icon=$DOWN_ICON
    dunstify -h int:value:"$volume" -i "${icon}" "Volume: ${volume}%" -t 2000 -r 123
}

case $1 in
UP)
    pamixer -u
    pamixer -i 5 --allow-boost
    send_notification "$1"
    pw-play $SOUND
    ;;
DOWN)
    pamixer -u
    pamixer -d 5 --allow-boost
    send_notification "$1"
    pw-play $SOUND
    ;;
MUTE)
    pamixer -t
    if eval pamixer --get-mute; then
        dunstify -i "$MUTED_ICON" -t 2000 "Muted" -r 123
    else
        send_notification UP
    fi
    ;;
esac
