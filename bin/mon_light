#!/usr/bin/env bash

ICON_DIR=$(nix path-info nixpkgs#rose-pine-icon-theme)
UP_ICON="$ICON_DIR/share/icons/rose-pine/16x16/panel/gpm-brightness-lcd.svg"
DOWN_ICON="$ICON_DIR/share/icons/rose-pine/16x16/panel/gpm-brightness-lcd-disabled.svg"

brighten() {
    brillo -q -A 5
    curr_level=$(brillo)
    dunstify "Brightness" -h int:value:"$curr_level" -t 2000 -i "$UP_ICON"
}

dim() {
    brillo -q -U 5
    curr_level=$(brillo)
    dunstify "Brightness" -h int:value:"$curr_level" -t 2000 -i "$DOWN_ICON"
}

case $1 in
"-u")
    brighten
    ;;
"-d")
    dim
    ;;
*)
    usage
    ;;
esac
